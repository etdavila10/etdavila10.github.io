---
import DefaultLayout from "@layouts/DefaultLayout.astro"
---

<DefaultLayout title="Eduardo Torres Dávila">
  <div class="flex flex-col h-screen justify-end gap-6">
    <div class="pl-6">
      <h1 class="text-3xl mb-3">Eduardo Torres Dávila</h1>
      <div>
        <i class="fa-brands fa-github mr-2 text-2xl"></i>
        <i class="fa-brands fa-linkedin-in text-2xl"></i>
      </div>
    </div>
    <div>
      <a href="mathematics">
        <div class="h-48 flex flex-col justify-center bg-red-400">
          <h3 class="pl-6 text-2xl">Math</h3>
        </div>
      </a>
      <a href="software">
        <div class="h-48 flex flex-col justify-center text-right bg-green-400">
          <h3 class="pr-6 text-2xl">Software</h3>
        </div>
      </a>
      <a href="data-science">
        <div class="h-48 flex flex-col justify-center bg-blue-400">
          <h3 class="pl-6 text-2xl">Data</h3>
        </div>
      </a>
    </div>
  </div>
</DefaultLayout>
