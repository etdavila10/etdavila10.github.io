---
const {
  widthClass,
  heightClass,
  paddingClass,
  gapClass,
  flexClasses,
  name,
  logo,
  website,
} = Astro.props;
---

<div
  class:list={[
    widthClass || "w-32",
    heightClass || "h-32",
    paddingClass || "p-6",
    gapClass || "gap-3",
    flexClasses || "flex-grow flex-shrink-0 basis-1/2 sm:basis-1/3",
    "flex-col flex justify-center text-center items-center",
  ]}
>
  <img class="h-16" src={logo} />
  <h2 class="font-display">{name}</h2>
</div>
