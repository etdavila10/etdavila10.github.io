<div id='navigation' class='fixed top-0 left-0 h-screen w-48 pl-5 border-r border-gray-300
            bg-gray-200 flex flex-col justify-center gap-1' />

<script>
  const navBar = document.getElementById('navigation');
  const sections = document.querySelectorAll('.section');

  for (const sectionDom of sections.values()) {
    const sectionId = sectionDom.id;
    const sectionLinkName = sectionDom.dataset.linkName;
    const navItemClasses = ['hover:text-sky-500', 'hover:scale-105','transition', 'duration-500'];
    const sectionNavItem = document.createElement('a');
    const sectionNavContent = document.createTextNode(sectionLinkName);

    sectionNavItem.href = `/#${sectionId}`;
    sectionNavItem.appendChild(sectionNavContent);
    sectionNavItem.classList.add(...navItemClasses);
    navBar.appendChild(sectionNavItem);

    const subSections = sectionDom.querySelectorAll('.sub-section');
    const subSectionContainer = document.createElement('div');
    subSectionContainer.classList.add('flex', 'flex-col', 'gap-1', 'text-slate-600');
    for (const subSectionDom of subSections.values()) {
      const subSectionId = subSectionDom.id;
      const subSectionLinkName = subSectionDom.dataset.linkName;
      const subNavItemClasses = ['hover:text-sky-500', 'transition', 'hover:scale-105', 'pl-2', 'duration-500', 'text-sm'];
      const subSectionNavItem = document.createElement('a');
      const subSectionNavContent = document.createTextNode(subSectionLinkName);

      subSectionNavItem.href = `/#${subSectionId}`;
      subSectionNavItem.appendChild(subSectionNavContent);
      subSectionNavItem.classList.add(...subNavItemClasses);
      subSectionContainer.appendChild(subSectionNavItem);
    }
    navBar.appendChild(subSectionContainer);
  }
</script>
