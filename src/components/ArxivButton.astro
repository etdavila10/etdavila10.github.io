---
interface Props {
  title: string;
  arxivLink: string;
}

const { title, arxivLink } = Astro.props;
---

<div class="text-white font-display relative group w-fit text-sm lg:text-lg mb-6">
  <div class="w-full h-full absolute bg-grey-900 translate-x-1 translate-y-1">
  </div>
  <a href={arxivLink}>
    <span
      class="bg-red-400 py-2 px-6 h-full w-full border-2 border-grey-900
        block relative transition group-hover:translate-y-1
        group-hover:translate-x-1"
      >{title}</span
    >
  </a>
</div>
