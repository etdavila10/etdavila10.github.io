---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<div class='w-full flex justify-start items-center sticky top-0 bg-amber-50 bg-opacity-80 backdrop-blur-sm'>
  <ul class='mt-5'>
    <a class={`${currentPath === '' ? 'border-b-4 border-sky-500': ''} hover:text-sky-500 inline-block py-2 px-5 transition duration-200 ease-in-out`} href='/'>
      <li>Home</li>
    </a><a class={`${currentPath === 'about' ? 'border-b-4 border-sky-500': ''} hover:text-sky-500 inline-block py-2 px-5 transition duration-200 ease-in-out`} href='/about'>
      <li>About</li>
    </a><a class={`${currentPath === 'research' ? 'border-b-4 border-sky-500': ''} hover:text-sky-500 inline-block py-2 px-5 transition duration-200 ease-in-out`} href='/research'>
      <li>Research</li>
    </a><a class={`${currentPath === 'projects' ? 'border-b-4 border-sky-500': ''} hover:text-sky-500 inline-block py-2 px-5 transition duration-200 ease-in-out`} href='/projects'>
      <li>Projects</li>
    </a>
  </ul>
</div>
