<script>
  const navBar = document.getElementById('nav-bar');

  const updateNavBar = () => {
    if (window.scrollY === 0) {
      navBar?.classList.remove('border-b', 'border-zinc-700');
    } else {
      navBar?.classList.add('border-b', 'border-zinc-700');
    }
  };

  window.onload = () => {
    updateNavBar()
  };
  window.addEventListener('scroll', updateNavBar);
</script>
