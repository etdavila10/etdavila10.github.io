---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, pageTitle, bgColor } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <script src="https://kit.fontawesome.com/9730b2ac3e.js" crossorigin="anonymous"></script>
		<title>{title}</title>
	</head>
	<body class='bg-amber-50 text-zinc-700'>
    <Header />
    <main class='bg-red-400 min-h-screen px-10 pt-12'>
        <div class='w-fit font-bold text-7xl bg-sky-500 rounded-full py-10 px-10'>
          <p class=''>{ pageTitle }</p>
        </div>
        <div class=''>
          <slot />
        </div>
    </main>
    <Footer />
	</body>
</html>
