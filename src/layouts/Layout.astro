---
import '@fontsource/merriweather-sans';
import '@fontsource/source-sans-pro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-neutral text-gray">
    <header>
      <svg
        class="transition-all duration-100 group"
        viewBox="0 0 101.72103 100"
        version="1.1"
        id="main-logo"
        inkscape:export-xdpi="96"
        inkscape:export-ydpi="96"
        inkscape:version="1.3.2 (091e20ef0f, 2023-11-25, custom)"
        sodipodi:docname="portfolio_logo.svg"
        <g>
          <rect
             style="fill:#005050;fill-opacity:1;stroke-width:0;stroke-linecap:round;stroke-linejoin:round;stroke-dasharray:none;stroke-opacity:1"
             id="main-rect"
             width="100"
             height="100"
             x="0"
             y="0" />
          <path
            class="group-hover:stroke-15 duration-100"
             style="stroke:#ffffe8;stroke-linecap:butt;stroke-linejoin:round;stroke-dasharray:none;stroke-opacity:1;paint-order:normal"
             d="M 24.999999,34.999998 H 102"
             id="top-gap"
             sodipodi:nodetypes="cc" />
          <path
             style="stroke:#ffffe8;stroke-width:30;stroke-linecap:butt;stroke-linejoin:round;stroke-dasharray:none;stroke-opacity:1;paint-order:normal"
             d="m 70.72103,50 h 35"
             id="middle-gap"
             sodipodi:nodetypes="cc" />
          <path
            class="group-hover:stroke-15 duration-100"
             style="stroke:#ffffe8;stroke-linecap:butt;stroke-linejoin:round;stroke-dasharray:none;stroke-opacity:1"
             d="M 24.999999,64.999997 H 102"
             id="bot-gap"
             sodipodi:nodetypes="cc" />
        </g>
      </svg>
    </header>
		<slot />
    <footer>Footer goes here</footer>
	</body>
</html>

<style>
  svg {
    width: 3rem;
  }
</style>
